<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="848dp">

    <ImageView
        android:id="@+id/loginStarIc"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/ic_login_star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="20sp"
        android:background="@drawable/ic_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/loginStarIc" />

    <TextView
        android:id="@+id/resetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="34dp"
        android:text="Reset Password"
        android:textSize="39dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loginStarIc" />

    <TextView
        android:id="@+id/text"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="13dp"
        android:lineSpacingExtra="4sp"
        android:textColor="#b3000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetText"
        tools:text="Please type something you'll remember" />

    <TextView
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="20sp"
        android:lineSpacingExtra="3.5sp"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />


    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/onboarding_edittext_bg_selector"
        android:hint="must be 8 characters"
        android:inputType="textPassword"
        android:lineSpacingExtra="4sp"
        android:maxLength="30"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newPassword" />
    <ImageView
        android:id="@+id/showHideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16sp"
        android:src="@drawable/ic_eye_selector"
        app:layout_constraintBottom_toBottomOf="@id/passwordEditText"
        app:layout_constraintRight_toRightOf="@id/passwordEditText"
        app:layout_constraintTop_toTopOf="@id/passwordEditText" />


    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="20sp"
        android:lineSpacingExtra="3.5sp"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

    <EditText
        android:id="@+id/confirmPassEditText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/onboarding_edittext_bg_selector"
        android:hint="repeat password"
        android:inputType="textPassword"
        android:lineSpacingExtra="4sp"
        android:padding="16dp"
        android:maxLength="30"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmPassword" />
    <ImageView
        android:id="@+id/showHideBtnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16sp"
        android:src="@drawable/ic_eye_selector"
        app:layout_constraintBottom_toBottomOf="@id/confirmPassEditText"
        app:layout_constraintRight_toRightOf="@id/confirmPassEditText"
        app:layout_constraintTop_toTopOf="@id/confirmPassEditText" />


    <TextView
        android:id="@+id/resetBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/primary_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="Reset password"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmPassEditText" />

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="200dp"
        android:lineSpacingExtra="3.5sp"
        android:text="Already have an account?"
        android:textColor="#b3000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/signUpBtn"
        app:layout_constraintTop_toBottomOf="@id/resetBtn" />

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginRight="110dp"
        android:clickable="true"
        android:lineSpacingExtra="3.5sp"
        android:text="Log in"
        android:textColor="#b3000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/bottomText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>