<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="848dp">

    <ImageView
        android:id="@+id/loginStarIc"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginTop="47dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/ic_login_star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="20sp"
        android:background="@drawable/ic_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/loginStarIc" />


    <TextView
        android:id="@+id/signinText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="20sp"
        android:text="Please check your email"
        android:textSize="39dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loginStarIc" />

    <TextView
        android:id="@+id/dontWorryTxt"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="13dp"
        android:lineSpacingExtra="4sp"
        android:textColor="#b3000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signinText"
        tools:text="We've sent a code to helloworld@gmail.com" />

    <TextView
        android:id="@+id/screen1"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/link_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dontWorryTxt" />

    <TextView
        android:id="@+id/screen2"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/link_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@id/screen1"
        app:layout_constraintRight_toLeftOf="@id/screen3"
        app:layout_constraintTop_toTopOf="@id/screen1" />


    <TextView
        android:id="@+id/screen3"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/link_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@id/screen2"
        app:layout_constraintRight_toRightOf="@id/screen4"
        app:layout_constraintTop_toTopOf="@id/screen1" />

    <TextView
        android:id="@+id/screen4"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/link_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@id/screen3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/screen1" />

    <TextView
        android:id="@+id/verifyBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/primary_btn_bg"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20sp"
        android:gravity="center"
        android:text="Verify"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/screen4" />

    <TextView
        android:id="@+id/sentCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#b3000000"
        android:lineSpacingExtra="4sp"
        tools:text="Send code again"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/verifyBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120sp"
        app:layout_constraintRight_toLeftOf="@id/timer"
        />
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#b3000000"
        android:lineSpacingExtra="4sp"
        tools:text="00:20"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/verifyBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginRight="120sp"
        app:layout_constraintLeft_toRightOf="@id/sentCode"
        />

</androidx.constraintlayout.widget.ConstraintLayout>