<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="43dp"
            android:background="@drawable/ic_back_btn" />

        <ImageView
            android:id="@+id/loginStarIc"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_login_star" />
    </LinearLayout>


    <TextView
        android:id="@+id/signinText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0"
        android:text="Sign up"
        android:textSize="39dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/firstnamePf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginRight="20sp"
                android:lineSpacingExtra="3.5sp"
                android:text="Firstname"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signinText" />

            <EditText
                android:id="@+id/firstNameET"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Your firstname"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstnamePf" />
            <TextView
                android:id="@+id/lastnamePf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginRight="20sp"
                android:lineSpacingExtra="3.5sp"
                android:text="Lastname"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstNameET" />

            <EditText
                android:id="@+id/lastNameET"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Your lastname"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastnamePf" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="14sp"
                android:layout_marginRight="20sp"
                android:lineSpacingExtra="3.5sp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastNameET" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Your email"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailTextView" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20sp"
                android:lineSpacingExtra="3.5sp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailEditText" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="********"
                android:inputType="textPassword"
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordTextView" />

            <ImageView
                android:id="@+id/showHideBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16sp"
                android:src="@drawable/ic_eye_selector"
                app:layout_constraintBottom_toBottomOf="@id/passwordEditText"
                app:layout_constraintRight_toRightOf="@id/passwordEditText"
                app:layout_constraintTop_toTopOf="@id/passwordEditText" />


            <TextView
                android:id="@+id/confirmPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20sp"
                android:lineSpacingExtra="3.5sp"
                android:text="Confirm Password"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

            <EditText
                android:id="@+id/confirmPassEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="********"
                android:inputType="textPassword"
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmPass" />

            <ImageView
                android:id="@+id/showHideBtnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16sp"
                android:src="@drawable/ic_eye_selector"
                app:layout_constraintBottom_toBottomOf="@id/confirmPassEditText"
                app:layout_constraintRight_toRightOf="@id/confirmPassEditText"
                app:layout_constraintTop_toTopOf="@id/confirmPassEditText" />

            <TextView
                android:id="@+id/phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20sp"
                android:lineSpacingExtra="3.5sp"
                android:text="Phone number"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmPassEditText" />

            <EditText
                android:id="@+id/phoneNumEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Your phone number "
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneNum" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20sp"
                android:text="Address"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneNumEditText" />


            <TextView
                android:id="@+id/tvpostCode"
                android:layout_width="197dp"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Post code"
                android:padding="14sp"
                android:textSize="16sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address" />

            <TextView
                android:id="@+id/btnAddress"
                android:layout_width="155dp"
                android:layout_height="56dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/primary_btn_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:hint="Post code"
                android:padding="14dp"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvpostCode" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Address "
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvpostCode" />

            <EditText
                android:id="@+id/etAddressDetatils"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20sp"
                android:background="@drawable/onboarding_edittext_bg_selector"
                android:hint="Address "
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvAddress" />

<!--            <TextView-->
<!--                android:id="@+id/contentTxt"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="45sp"-->
<!--                android:padding="15dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginRight="20sp"-->
<!--                android:lineSpacingExtra="3.5sp"-->
<!--                android:text="I accept the terms and privacy policy"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="14sp"-->
<!--                android:textStyle="normal"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/etAddressDetatils" />-->

<!--            <ImageView-->
<!--                android:id="@+id/agreementBtn"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="10sp"-->
<!--                android:padding="15dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:src="@drawable/ic_tick_selector"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/etAddressDetatils" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/agreementBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick_selector"
                android:clickable="true"/>

            <TextView
                android:id="@+id/aggrementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lineSpacingExtra="3.5sp"
                android:text="I accept the terms and privacy policy"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    <TextView
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="3dp"
        android:layout_weight="0"
        android:background="@drawable/primary_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>
</LinearLayout>