<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            app:titleTextColor="@color/black">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="Order Details"
                android:textColor="#201a1b"
                android:textSize="22sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/orderNum"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Order Number"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvData"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="2024-02-24-8"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Order Status"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/orderNum"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="Pending"
        app:layout_constraintTop_toBottomOf="@id/tvData"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/payment"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Payment"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/orderStatus"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvPayment"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="Paid"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Total Price"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/payment"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="320,000 Won"
        app:layout_constraintTop_toBottomOf="@id/tvPayment"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/totalPrice"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="Jamshidbek"
        app:layout_constraintTop_toBottomOf="@id/tvTotalPrice"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/phoneNum"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Phone number"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="010-2366-1401"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/address"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Address"
        android:textColor="#b0afaf"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/phoneNum"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="1sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="Address"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNum"
        app:layout_constraintRight_toRightOf="parent"/>


    <!--- Order View -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>